<div class="mt-4">
  <div>
    <h3>Khóa học đã xóa</h3>
    <a href="/me/stored/courses">Danh sách khóa học</a>
  </div>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên khóa học</th>
                <th scope="col">Trình độ</th>
                <th scope="col">Thời gian tạo</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.level}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href="" class="btn btn-link btn-restore" data-id="{{this._id}}">Khôi phục</a>
                    <a href=""  class="btn btn-link" data-bs-toggle="modal" data-bs-target="#delete-course-modal" data-id="{{this._id}}">Xóa vĩnh viễn</a>
                </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="5" class="text-center">
                Thùng rác trống. 
                <a href="/me/stored/courses">Danh sách khóa học</a>
              </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>


{{!-- modal delete courses --}}
<div class="modal fade" id="delete-course-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xóa khóa học</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        bạn chắc chắn muốn xóa khóa học không
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" id="btn-delete-courses" class="btn btn-danger">Xóa bỏ</button>
      </div>
    </div>
  </div>
</div>

{{!-- delete hidden form --}}
<form method="POST" name="delete-courses-form"></form>
<form method="POST" name="restore-courses-form"></form>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var courseId;
    var deleteForm = document.forms['delete-courses-form'];
    var deleteBtn = document.getElementById('btn-delete-courses');
    var restoreForm = document.forms['restore-courses-form'];
    var restoreBtns = document.querySelectorAll('.btn-restore');

    var deleteleModal = document.querySelector('#delete-course-modal');
    deleteleModal.addEventListener('show.bs.modal', event => {
      var button = event.relatedTarget;
      courseId = button.dataset.id;
    })

    deleteBtn.onclick = () => {
      deleteForm.action = `/courses/${courseId}/force?_method=DELETE`;
      deleteForm.submit();
    }

    //restore btn click
    restoreBtns.forEach(btn => {
    btn.addEventListener('click', function (e) {
        e.preventDefault();

        const courseId = this.dataset.id;
        restoreForm.action = `/courses/${courseId}/restore?_method=PATCH`;
        restoreForm.submit();
      });
    });
  })
</script>