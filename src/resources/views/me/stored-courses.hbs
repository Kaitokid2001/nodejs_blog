<form name="container-form" class="mt-4">
  <div>
    <h3>Khóa học của tôi</h3>
    <a href="/me/trash/courses">Thùng rác {{delectedCount}}</a>

    <div class="mt-4">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
        <label class="form-check-label" for="checkbox-all">
          Chọn tất cả
        </label>
      </div>
    </div>

    <select class="form-control form-control-sm" id="">
      <option>---hành động---</option>
      <option>Xóa</option>
    </select>

    <button class="btn btn-primary btn-sm btn-checkAll-submit disable">Thực hiện</button>
  </div>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên khóa học</th>
                <th scope="col">Trình độ</th>
                <th scope="col">Thời gian tạo</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="{{this._id}}" name="courseId[]">
                  </div>
                </td>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.level}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href="/courses/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                    <a href=""  class="btn btn-link" data-bs-toggle="modal" data-bs-target="#delete-course-modal" data-id="{{this._id}}">Xóa</a>
                </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="5" class="text-center">
                Không có bài học nào. 
                <a href="/courses/create">Đăng khóa học</a>
              </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</form>


{{!-- modal delete courses --}}
<div class="modal fade" id="delete-course-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xóa khóa học</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        bạn chắc chắn muốn xóa khóa học không
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" id="btn-delete-courses" class="btn btn-danger">Xóa bỏ</button>
      </div>
    </div>
  </div>
</div>

{{!-- delete hidden form --}}
<form method="POST" name="delete-courses-form"></form>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var courseId;
    var deleteForm = document.forms['delete-courses-form'];
    var deleteBtn = document.getElementById('btn-delete-courses');
    var checkboxAll = document.getElementById('checkbox-all');
    var courseItemCheckbox = document.querySelectorAll('input[name="courseId[]"]');
    var checkAllSubmitBtn = document.querySelectorAll('.btn-checkAll-submit');
    var containerForm = document.forms['container-form'];

    var deleteleModal = document.querySelector('#delete-course-modal');
    deleteleModal.addEventListener('show.bs.modal', event => {
      var button = event.relatedTarget;
      courseId = button.dataset.id;
    });

    deleteBtn.onclick = () => {
      deleteForm.action = `/courses/${courseId}?_method=DELETE`;
      deleteForm.submit();
    };

    //all checkbox click
    checkboxAll.onchange = function () {
      const isCheckedAll = this.checked;
      
      if (isCheckedAll) {
        courseItemCheckbox.forEach(cb => cb.checked = true);
      } else {
        courseItemCheckbox.forEach(cb => cb.checked = false);
      }
      renderCheckAllSubmitBtn();
    };
    
    //course item check box changed
    courseItemCheckbox.forEach(cb => {
      cb.addEventListener('change', function () {
        const checkedCount = document.querySelectorAll(
          'input[name="courseId[]"]:checked'
        ).length;

        checkboxAll.checked = checkedCount === courseItemCheckbox.length;
        renderCheckAllSubmitBtn();
      });
    });

    // check all submit btn click
    checkboxAll.addEventListener('change', function () {
      courseItemCheckbox.forEach(cb => cb.checked = this.checked);
      renderCheckAllSubmitBtn();
    });

    // re-render button check submit
    function renderCheckAllSubmitBtn() {
      const checkedCount = document.querySelectorAll(
          'input[name="courseId[]"]:checked'
      ).length;
      checkAllSubmitBtn.disabled = checkedCount === 0;
    }
      courseItemCheckbox.forEach(cb =>
        cb.addEventListener('change', renderCheckAllSubmitBtn)
      );
      checkboxAll.addEventListener('change', renderCheckAllSubmitBtn);
  })
</script>